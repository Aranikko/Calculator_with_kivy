MainWidget:

<MainWidget>:
    rows: 6
    cols: 3
    #
    Button:
        text: "9"
        on_press: root.if_nine_press()
    #
    Button:
        text: "8"
        on_press: root.if_eight_press()
    Button:
        text: "7"
        on_press: root.if_seven_press()
    Button:
        text: "6"
        on_press: root.if_six_press()
    #
    Button:
        text: "5"
        on_press: root.if_five_press()
    Button:
        text: "4"
        on_press: root.if_four_press()
    Button:
        text: "3"
        on_press: root.if_three_press()
    #
    Button:
        text: "2"
        on_press: root.if_two_press()
    Button:
        text: "1"
        on_press: root.if_one_press()
    Button:
        text: "0"
        on_press: root.if_zero_press()
    #
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: "+"
            size_hint: .3, 1
            on_press: root.if_stack_press()
        Button:
            text: "-"
            size_hint: .3, 1
            on_press: root.if_subtract_pess()
        Button:
            text: "*"
            size_hint: .3, 1
            on_press: root.if_multiply_press()
        Button:
            text: "/"
            size_hint: .3, 1
            on_press: root.if_divide_press()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: "="
                size_hint: 1, .7
                on_press: root.if_equal_press()
    #
    Button:
        text: "C" 
        on_press: root.if_Clear_press()      
    RelativeLayout:
        Label:
            font_name: 'Font/ARIALBD 1.ttf'
            font_size: 75
            text: root.value_1
            pos: '240dp','0dp'

    